<% layout("layouts/boilerplate.ejs")%>
<body>
    

    <!-- âœ… Correct form setup with method override -->
    <form action="/listings/<%= foundListing._id %>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data"> 
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Update your listing:</h3>
               <div class="md-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" name="listing[title]" value="<%= foundListing.title %>" class="form-control" required>
          <div class="invalid-feedback">Enter title</div>
        </div>
        <div class="md-3 ">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" rows="5" cols="20" class="form-control" required><%= foundListing.description %></textarea>
           <div class="invalid-feedback">Enter description</div>
        </div>

        <div class="md-3">
          <img src="<%= foundListing.image.url %>" height="250" width="350">
         </div>
        <div class="md-3">
          <label for="image" class="form-label">Image</label>
           <input type="file" name="image"  class="form-control">
           <input type="hidden" name="listing[image][filename]" value="<%= foundListing.image.filename %>">
            <div class="invalid-feedback">Enter image url</div>
        </div>

        <div class="row">
            <div class="md-3 col-md-4">
            <label for="price" class="form-label">Price</label>
           <input  name="listing[price]" value="<%= foundListing.price %>" class="form-control" required>
            <div class="invalid-feedback">Enter valid Price</div>
       </div>
       <div class="md-3 col-md-8">
           <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" value="<%= foundListing.country %>" class="form-control" required>
             <div class="invalid-feedback">Enter country</div>
        </div>
        </div>
       
        <div class="md-3">
            <label for="location" class="form-label">Location</label>
              <input type="text" name="listing[location]" value="<%= foundListing.location %>" class="form-control" required>
               <div class="invalid-feedback">Enter location</div>
        </div>
              <button type="submit" class="btn btn-dark edit-btn mt-4 mb-4">Update</button>
         

            </div>
        </div>
       
       
    </form>

   
</body>

