<% layout("layouts/boilerplate.ejs") %>
<body>
    <div class="row">
      <div class="col-8 offset-3 mt-3">
    <h3><b><%=listings.title%></b></h3>
    </div>
    <div class="card col-6 offset-3 mt-3 show-card listing-card" >
         <img src="<%= listings.image?.url || 'https://via.placeholder.com/300' %>" class="card-img-top show-img" alt="listing">
  <div class="card-body">
    <p class="card-text"> <b>Owned by:
      <i> <%= listings.owner.username %></i></b></p>
            <p class="card-text"> <%=listings.description%><br> </p>
             <p class="card-text"> &#8377;<%=listings.price.toLocaleString("en-IN")%><br> </p>
            <p class="card-text"> <%=listings.location%><br> </p>
             <p class="card-text"><%=listings.country%><br>
    </p>
  </div>
    </div>
    </div>
  <div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-auto">
      <% if (currUser && String(listings.owner._id) === String(currUser._id)) { %>
      <form method="GET" action="/listings/<%= listings._id %>/edit">
        <button type="submit" class="btn btn-dark edit-btn">Edit</button>
      </form>
    </div>
    <div class="col-auto">
      <form method="POST" action="/listings/<%= listings._id %>?_method=DELETE">
        <button type="submit" class="btn btn-dark">Delete</button>
      </form>
      <% } %>
     
    </div>
     <hr>
  </div>
              
    <form method="POST" action="/listings/<%= listings._id %>/reviews">
        <div class="col-8 offset-3 mb-3">
                <fieldset class="starability-slot">
  <h4>Leave a review</h4>
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
       


        <div class="mt-3 mb-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
          <div class="invalid-feedback">Please add some comment for reviews.</div>
          <div class="valid-feedback">Looks good</div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
    </form>

  
     
    <hr />
    <div class=" mt-3">
      <p><b>All Reviews</b></p>
      <div class="row">
        <% for( let reviews of listings.review) { %>
              <div class="card col-5 mb-3 ms-3">
                <div class="card-body">
                   <h5 class="card-title">@<%= reviews.author.username %></h5>
                       <p class="starability-result card-text" data-rating=<%= reviews.rating %> >
                                   </p>
                   <p class="card-text"><%= reviews.comment %></p>
                    <form method="POST" action="/listings/<%= listings._id %>/reviews/<%= reviews._id %>?_method=DELETE">
        <button class="btn btn-sm btn-dark mb-2">Delete</button>
       </form>
       </div>
                </div>
              </div>
       <% } %>
       </div>
       
    </div>
  </div>
</div> 
</body>
